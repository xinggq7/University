/*平板的css*/
.device {
	width: 80%;
	position: relative;
	margin: 10px auto;
	height: 550px;
	padding: 30px 40px;
	border-radius: 40px;
	background: #000;
	border:3px solid #fff;
	box-shadow: 10px 10px 5px #000;
}
/*平板下的浅黑色背景*/
.swiper-container{

	margin:0 auto;
	position:relative;
	overflow:hidden;
	width: 100%;
	height: 545px;
	color: #fff;
	background: #222;
	text-align: center;
}
/*滑动窗体的背景*/
.swiper-wrapper {

	position:relative;
	width:100%;
}

/*滑动窗体中的图片排成一行*/
.swiper-slide {
	float: left;
}
/*每张图片所在div的样式*/
.swiper-slide {
	-webkit-transition: 300ms;
	-webkit-transform: scale(0);
}
.swiper-slide-visible {
  opacity: 0.5;
  -webkit-transform: scale(0.8);
}
.swiper-slide-active {
  opacity: 1;
  -webkit-transform: scale(1);
  -moz-transform: scale(1);
  -ms-transform: scale(1);
  -o-transform: scale(1);
  transform: scale(1);
}
/*每张图片所在div的样式*/


/*滑动条*/
.pagination {
  position: absolute;
  z-index: 20;
  left: 0px;
  width: 100%;
  text-align: center;
  bottom: 5px;
}
.swiper-pagination-switch {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 8px;
  background: #aaa;
  margin-right: 8px;
  cursor: pointer;
  -webkit-transition: 300ms;
  -moz-transition: 300ms;
  -ms-transition: 300ms;
  -o-transition: 300ms;
  transition: 300ms;
  opacity: 0;
  position: relative;
  top: -50px;
}
.swiper-visible-switch {
  opacity: 1;
  top: 0;
  background: #aaa;
}
.swiper-active-switch {
  background: #fff;
}
/*滑动条*/

/*图片标题字体*/
h2 {
	font: bold 20px montserrat; 
	color: #fff; 
	text-transform: uppercase; 
	position: absolute; 
	text-align: center; 
	width: 60%; 
	left: 20%; 
	top: 50px; 
	padding: 10px 0; 
	border: 3px solid white; 
	border-radius: 20px;
	font-family: "Segoe UI", "Lucida Grande", Helvetica, Arial, "Microsoft YaHei", FreeSans, Arimo, "Droid Sans", "wenquanyi micro hei", "Hiragino Sans GB", "Hiragino Sans GB W3", "FontAwesome", sans-serif;
}
/*图片样式*/	
img{
	border-radius: 30px;
	width:auto;
	height:auto;
	max-width:100%;
	max-height:100%;
}
